<%- include('includes/head.ejs') %>
<style>
    p {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        display: inline-block;
        width: -webkit-fill-available;
    }
</style>
</head>

<body class="body">



    <%- include('includes/navigation.ejs') %>

    <div>

        <p align="center" class="sign head">Join one of our active conferences:</p>
        <main class="grid">
            <% for (let conference of conferences) { %>
            <% if(conference.startTime < currentDate && conference.endTime > currentDate) {%>
            <div class="mainGrid">
                <div class="speaker-image" style="width: 100%; height:300px; background-image: url('<%=conference.conferenceImg%>'); background-position: center; background-repeat:no-repeat; background-size: contain"></div>
                <article class="active">
                    <div class="text">
                        <p class="sign conference-header" align="center"><%=conference.name%></p>
                        <p><b>Start time: </b><%=conference.startTime.toString().substring(0, 21)%></p>
                        <p><b>End time: </b><%=conference.endTime.toString().substring(0, 21)%></p>
                        <p maxlength="20"><b>Description: </b><%=conference.description%></p>
                        <p><b>Address: </b><%=conference.address.adress%></p>
                        <a href="/allconferences/<%= conference._id %>" name="conferenceId" align="center"
                            class="submit button btn-block">Details</a>
                    </div>
                </article>
            </div>
            <% } %>

            <% } %>
            <!-- <script> var sass = require('node-sass'); </script> -->
        </main>
        <div class="body" style="margin: 30px 0;">
            <div class="grid3">
                <a class="button submit1" href="/allconferences">View all conferences</a>
            </div>

        </div>

    </div>

    <%- include('includes/end.ejs') %>